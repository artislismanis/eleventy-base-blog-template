{
	"name": "@eleventy-plugin-themer/theme-base",
	"version": "3.0.0",
	"description": "A minimal convention-based Eleventy theme with self-describing metadata and extensible features",
	"type": "module",
	"main": "lib/index.mjs",
	"exports": {
		".": "./lib/index.mjs",
		"./theme.json": "./theme.json",
		"./layouts/*": "./layouts/*",
		"./styles/*": "./styles/*",
		"./scripts/*": "./scripts/*",
		"./features/*": "./features/*"
	},
	"files": [
		"lib/",
		"layouts/",
		"styles/",
		"scripts/",
		"features/",
		"public/",
		"theme.json",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"eleventy",
		"eleventy-theme",
		"11ty",
		"blog-theme",
		"blog-template",
		"feature-system"
	],
	"author": "Artis Lismanis",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/artislismanis/eleventy-plugin-themer.git",
		"directory": "packages/themes/base"
	},
	"dependencies": {
		"@eleventy-plugin-themer/core": "^3.0.0",
		"luxon": "^3.7.0"
	},
	"peerDependencies": {
		"@11ty/eleventy": "^3.1.0"
	},
	"engines": {
		"node": ">=22"
	}
}
